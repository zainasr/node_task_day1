{
  "name": "products-categories-api",
  "version": "1.0.0",
  "description": "TypeScript Express API for products and categories",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:check": "drizzle-kit check",
    "db:studio": "drizzle-kit studio",
    "db:reset:data": "tsx src/db/reset.ts data",
    "db:reset:truncate": "tsx src/db/reset.ts truncate",
    "db:reset:drop": "tsx src/db/reset.ts drop",
    "db:seed": "tsx src/db/seed.ts",
    "db:fresh": "npm run db:reset:data && npm run db:seed",
    "db:rebuild": "npm run db:reset:drop && npm run db:migrate && npm run db:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-safe": "^9.1.0",
    "drizzle-orm": "^0.44.4",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.16",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "typescript",
    "express",
    "api",
    "zod"
  ],
  "author": "",
  "license": "MIT"
}
